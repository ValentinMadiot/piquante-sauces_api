{
  "version": 2,
  "builds": [
    { "src": "api/package.json", "use": "@vercel/node" },
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/hot-takes" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://piiquante-production.up.railway.app/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
