{
  "version": 2,
  "builds": [
    { "src": "api/package.json", "use": "@vercel/node" },
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/hot-takes" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://piiquante-production.up.railway.app/api/$1"
    },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
